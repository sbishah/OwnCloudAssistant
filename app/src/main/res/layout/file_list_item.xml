<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/file_list_item_thumbnail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />
    
    <TextView
        android:id="@+id/file_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:clickable="true"
        android:text="Name"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/file_list_item_thumbnail" />

    <TextView
        android:id="@+id/file_list_item_type"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_below="@+id/file_list_item_name"
        android:layout_toEndOf="@+id/file_list_item_thumbnail" />

    <ImageButton
        android:id="@+id/file_list_item_delete_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:drawable/ic_menu_delete" />

</RelativeLayout>